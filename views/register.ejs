<%- include('header'); -%>
 <div class="content">
 <h1 id="register">Register</h1>
 </div>

 <div class = "register">
     <form action = "/api/register" method = "post">
         <label for = "society"> Society</label>
         <input type = "text" id = "society" name = "society" maxlength = "60"> <br> <br>

         <label for = "contact"> Contact</label>
         <input type = "text" id = "contact" name = "contact" maxlength = "30"> <br> <br>

         <label for = "address"> Address</label>
         <input type = "text" id = "address" name = "address" maxlength = "40"> <br> <br>

         <label for = "zipcode"> Zipcode</label>
         <input type = "text" id = "zipcode" name = "zipcode" maxlength = "5"> <br> <br>

         <label for = "city"> City</label>
         <input type = "text" id = "city" name = "city" maxlength = "30" onkeyup="this.value = this.value.toUpperCase();"> <br> <br>

         <label for = "phone"> Phone</label>
         <input type = "text" id = "phone" name = "phone" maxlength = "15"> <br> <br>

         <label for = "fax"> Fax</label>
         <input type = "text" id = "fax" name = "fax" maxlength = "15"> <br> <br>

         <label for = "confirmation"> Confirmation</label>
         <input type = "text" id = "confirmation" name = "confirmation" value = "0"> <br> <br>

         <label for = "payment"> Payment</label>
         <select id = "payment" name = "payment">
            <option>Cheque + reception</option>
            <option>Draft + 30 days</option>
            <option>Draft + 60 days</option>
            <option>Draft + 90 days</option>
        </select><br> <br>

         <label for = "informations"> Informations</label>
         <input type = "text" id = "informations" name = "informations" value = ""> <br> <br>

         <label for = "maxOutstanding"> Max Outstanding</label>
         <input type = "number" id = "maxOutstanding" name = "maxOutstanding"> <br> <br>

         <input type = "submit">
     </form>
 </div> <br>
<%- include('footer'); -%>